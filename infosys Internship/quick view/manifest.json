{
  "manifest_version": 3,
  "name": "Local DOCX Viewer",
  "version": "1.0",
  "description": "View local DOCX files directly in Chrome",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "image16.png",
    "32": "image32.png",
    "48": "image48.png",
    "128": "image128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
